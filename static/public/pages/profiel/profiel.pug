if !filterStap && !profielInfo
  div.nogGeenFilters
    p Je hebt nog geen filters ingesteld. Klik op de knop hieronder om daar aan te beginnen
    a(href="/filteren").defaultButton start met filteren
else if filterStap === 'KiesSpel'
  include KiesSpel/KiesSpel.pug
else if filterStap !== 'KiesSpel' && filterStap
  include Filteren/Filteren.pug
else 
  div.profiel
    a(href="/filteren").defaultButton Filters aanpassen

    h3 Jouw game
    p= profielInfo.game

    h3 Jouw username
    p= profielInfo.name

    h3 Ranked of casual
    if Array.isArray(profielInfo.rankedOfCasual)
      ul
        each rankedOfCasual in profielInfo.rankedOfCasual
          li= rankedOfCasual
    else if profielInfo.rankedOfCasual
      p= profielInfo.rankedOfCasual
    else
      p Geen voorkeur
    
    h3 Rank/rating bewijs
    if rankProof
      img(src=`/uploads/${rankProof.filename}`)
    else 
      p Geen bewijs van rank
    
    h3 Mode/modes
    if Array.isArray(profielInfo.mode)
      ul
        each mode in profielInfo.mode
          li= mode
    else if profielInfo.mode
      p= profielInfo.mode
    else
      p Geen voorkeur

style 
  include profiel.css


